{
  "name": "react-homework",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "install:all": "cd ./client-server  && npm install && cd ../api-server && npm install",
    "list": "./pm2_remote ls",
    "build-api": "npm build ./api-server",
    "serve:all": "npm run build-api && ./pm2_remote start ecosystem.config.js",
    "serve:cli": "./pm2_remote start ecosystem.config.js --only client-server",
    "serve:api": "npm run build-api && ./pm2_remote start ecosystem.config.js --only api-server",
    "stop:all": "./pm2_remote stop ecosystem.config.js",
    "restart:all": "./pm2_remote restart ecosystem.config.js",
    "reload:all": "./pm2_remote reload ecosystem.config.js",
    "delete:all": "./pm2_remote delete ecosystem.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chun-MingChen/react-homework.git"
  },
